<Application x:Class="AdamOneilSoftware.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AdamOneilSoftware"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="dark" TargetType="Window">
			<Setter Property="Background" Value="Black"/>
		</Style>
        <Style x:Key="buttons" TargetType="Button">
            <Setter Property="Padding" Value="3px"/>
            <Setter Property="Margin" Value="5px"/>
            <Setter Property="MinWidth" Value="100px"/>
        </Style>
    </Application.Resources>
</Application>
